@model GamingVIVE.Models.GSGameModels.GamingSystemGameEdit

@{
    ViewData["Title"] = "EditConnection";
}

<h1>EditConnection</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditConnection">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GameId" class="control-label"></label>
                <input asp-for="GameId" class="form-control" />
                <span asp-validation-for="GameId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GamingSystemId" class="control-label"></label>
                <input asp-for="GamingSystemId" class="form-control" />
                <span asp-validation-for="GamingSystemId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ConnectionSettings">Back to GamingSystem Connections</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
