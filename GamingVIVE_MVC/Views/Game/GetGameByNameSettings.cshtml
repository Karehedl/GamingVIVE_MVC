@model GamingVIVE.Models.GameModels.GameDetails

@{
    ViewData["Title"] = "GetGameByNameSettings";
}

<div style="width:100; border:2px solid black;">
    <a asp-action="GameSettings" style="text-decoration:none; color: white;">Back to Games</a>
</div>
<div style="width:100; border:2px solid black; ">
    <h3 class="display-4" style="text-align:center; color: aqua;">@Html.DisplayFor(model => model.Name)</h3>
</div>

<div style="display:flex; width:100%;">
    <img src="@Html.DisplayFor(model => model.Picture)" style="height:100%; width:50%;" alt="@Html.DisplayFor(model => model.Picture)" />

    <div style="padding:25px">
        <dl class="row" style="margin-left:3px;">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.GameId)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.GameId)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Rating)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Rating)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Publisher)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Publisher)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.ReleaseDate)
            </dd>
            <dt class="col-sm-3">
                <h1 style="font-size: 20px;">@Html.DisplayNameFor(model => model.Consoles) (Id,Name)</h1>
            </dt>
            <dd class="col-sm-7">
                <div style=" height: 50px; overflow-x: hidden; overflow-y: scroll;">
                    @foreach (var item in Model.Consoles)
                    {
                        <h1 style="font-size: 20px; font: thin;">(@item.GamingSystemId,@item.Name)</h1>
                    }
                </div>

            </dd>
            <dt class="col-sm-3">
                <h1 style="font-size: 20px;">@Html.DisplayNameFor(model => model.Genres) (Id,Name)</h1>
            </dt>
            <dd class="col-sm-7">
                <div style=" height: 50px; overflow-x: hidden; overflow-y: scroll;">
                    @foreach (var item in Model.Genres)
                    {
                        <h1 style="font-size: 20px; font: thin;">(@item.GenreId,@item.Name)</h1>
                    }
                </div>
            </dd>
            <dt class="col-sm-3">
                <h1 style="font-size: 20px;">@Html.DisplayNameFor(model => model.Categories) (Id,Name)</h1>
            </dt>
            <dd class="col-sm-7">
                <div style=" height: 50px; overflow-x: hidden; overflow-y: scroll;">
                    @foreach (var item in Model.Categories)
                    {
                        <h1 style="font-size: 20px; font: thin;">(@item.MontizedCategoryId,@item.Name)</h1>
                    }
                </div>
            </dd>
        </dl>
    </div>

</div>

<div style="width:100; background-color:aqua; border: 2px solid black; display:flex;">
    <a class="display-4" style="margin: 0 auto; color: white; text-decoration:none; font:bold;" asp-action="#">BUY</a>
</div>


<div style="background-color:antiquewhite; height: 40px; ">
    <a style="text-decoration:none;" asp-controller="Game" asp-action="DeleteGame" asp-route-GameId="@Model?.GameId">Delete</a> |
    <a style="text-decoration:none;" asp-controller="Game" asp-action="EditGame" asp-route-GameId="@Model?.GameId">Edit</a> |
    <a style="text-decoration:none;" asp-controller="Game" asp-action="#" asp-route-GameId="@Model?.GameId">Connections</a> |
</div>