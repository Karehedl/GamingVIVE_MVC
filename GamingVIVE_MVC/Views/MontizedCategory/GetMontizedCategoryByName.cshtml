@model GamingVIVE.Models.MontizedCategoryModels.MontizedCategoryDetails

@{
    ViewData["Title"] = "GetMontizedCategoryByName";
}



<div>
    <h3 class="display-4" style="text-align:center; color: aqua;">@Html.DisplayFor(model => model.Name) Games</h3>
</div>

<nav class="gameNav">
    <a style="text-decoration:none; color: white; margin-right: auto; " asp-controller="MontizedCategory" asp-action="Index"> Back to Categories</a>
</nav>


<div class="gamebox">
    @foreach (var item in Model.CategorizedGames)
    {
                    <a style="text-decoration:none; color:black;" asp-controller="Game" asp-action="GetGameById" asp-route-GameId="@item.GameId">
                        <div class="game">

                            <img src="@item.Picture" style="height:80%; width:100%;" alt="@item.Name.ToUpper()" />

                            <div style="display:flex; height:20%; width:100%; background-color:azure;">
                                <h1 style="font-size: 20px;">@item.Name</h1>
                                <div class="price">$@item.Price</div>
                            </div>       

                        </div>
                    </a>

    }
</div>


