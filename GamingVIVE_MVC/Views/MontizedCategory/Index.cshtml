@using GamingVIVE.Models.MontizedCategoryModels;

@model IEnumerable<MontizedCategoryListItem>

<div class="background">

    <div>
        <h3 class="display-4" style="color:aqua; text-align:center; text-decoration:underline; text-decoration-thickness:2px;">Categories</h3>
    </div>

    <nav class="gameNav">
        <form method="get" style="margin-left: auto;" action="@Url.Action("GetMontizedCategoryByName", "MontizedCategory")">
            <input type="text" name="search" id="search" placeholder="Find Category By Name" />
            <button type="submit" class="button">Search</button>
        </form>
    </nav>



    <div class="gamebox">
        @foreach (var item in Model)
        {
            <a style="text-decoration:none; color:black;" asp-controller="MontizedCategory" asp-action="GetMontizedCategoryById" asp-route-MontizedCategoryId=" @item.MontizedCategoryId">
                <div class="game">

                    <div style="display:flex; height:100%; width:100%;">
                        <h1 style="font-size:20px; font:bolder; margin: auto; flex-wrap:wrap; ">@item.Name</h1>
                    </div>

                </div>
            </a>

        }
    </div>
</div>
